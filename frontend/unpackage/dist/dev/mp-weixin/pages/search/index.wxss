.c-clear {
		font-size: 14px;
		color: #121212;
		margin-top: 60rpx;
}
.c-clear--active {
		color: #4a90e2;
}
.c-tags__have-not-data {
		text-align: center;
		color: #666;
		margin-top: 30rpx;
		font-size: 24rpx;
}
